#!/usr/bin/expect

source ../kernel_config.exp
log_file [log_file_name "$argv0"]
send_user "Starting $argv0\n"
set TITLE [title "$argv0"]

step "Start kermit."
source ../spawn_kermit.exp

step "Reboot the kernel."
source ../reboot_kernel.exp

step "Start $TITLE\r"

set timeout 10
set case_num 0

set timeout 8
set flag 0
send "ifconfig eth0 $targetip\r"
while 1 {
   sleep 3
   expect {
      ">" {
         set flag 1
         puts "ifconfig set success.\n"
         break
      }

      timeout {
            puts "Fail ifconfig. "
            break
         }
     }
}

send "route add -net default gw $serverip\r"
while 1 {
   sleep 3
   expect {
      ">" {
         break
      }

      timeout {
            puts "Fail to add route. "
            break
         }
     }
}

send "route \r"
while 1 {
   sleep 3
   expect {
      -re "$serverip" {
         puts "Add route success.\n"
         break
      }

      timeout {
            puts "Fail to add route. "
            break
         }
     }
}


incr case_num
spawn linphonec 
set host_linphonec_id $spawn_id
while 1 {
      expect {
	"linphonec>" {
                case_pass $case_num
	 	break
         }
         timeout {
                case_fail $case_num
		exit
         }
      }
}

set spawn_id $kermit_spawn_id
set timeout 10
send "linphonec\r"
while 1 {
expect {
	"linphonec>" {
        case_pass $case_num
        break
	}
	timeout {
        case_fail $case_num
	exit
	}
}
}

set timeout 10
incr case_num
send "call sip:test@$serverip\r"

set spawn_id $host_linphonec_id 
while 1 {
expect {
        "is calling you" {
        case_pass $case_num
        break
        }
        timeout {
        case_fail $case_num
        exit
        }
}
}
send "answer\r"
while 1 {
expect {
        "Connected" {
        case_pass $case_num
        break
        }
        timeout {
        case_fail $case_num
        exit
        }
}
}

set spawn_id $kermit_spawn_id

while 1 {
expect {
	"Connected" {
        case_pass $case_num
        break
	}
	timeout {
        case_fail $case_num
	exit
	}
}
}

set timeout 3000
incr case_num
while 1 {
expect {
        -re "COMM.*PID" {
        set underrun_test_status 1
        break
        }
        "Underrun happened" {
        set underrun_test_status 1
        break
        }
       -re  "Network is unreachable|Illegal instruction|Bus error" {
        set underrun_test_status 1
        break
        }
        -re "Trace:.*\r\n\r\n" {
        expect -re "$kernel_prompt"
        set underrun_test_status 1
        break
        }

        timeout {
        set underrun_test_status 0
        break
        }
}
}

send "\3"
expect -re "$kernel_prompt"

if { $underrun_test_status == "0" } {
   case_pass $case_num
   send_log "\n"
   send_log "\n$TITLE ............\[PASS\]\n"
} elseif { $underrun_test_status == "1" } {
   case_fail $case_num
}

set spawn_id $host_linphonec_id
send "\3"

send_user "Ending $argv0\n"
log_file

